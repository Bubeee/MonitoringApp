<Window x:Class="MonitoringApp.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitoringApp"
        mc:Ignorable="d"
        Title="Аутентификация" Height="179.389" Width="381.203" Foreground="Lime">
    <Grid>
        <Label x:Name="AuthenticationLabel" Content="Пожалуйста, введите ключ" HorizontalAlignment="Left" Margin="102,21,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SubmitPassword" Content="Проверить" HorizontalAlignment="Left" Margin="142,60,0,0" VerticalAlignment="Top" Width="75" Click="SubmitPassword_OnClick"/>
        <Label x:Name="ValidationLabel" Content="Валидация ключа успешна" HorizontalAlignment="Left" Margin="102,93,0,0" VerticalAlignment="Top" Width="162" Foreground="#FF00FF02" Visibility="Hidden" />
    </Grid>
</Window>
